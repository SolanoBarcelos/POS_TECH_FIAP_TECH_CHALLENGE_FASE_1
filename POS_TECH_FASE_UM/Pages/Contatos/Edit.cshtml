@page "{id_contato:int}"
@model POS_TECH_FASE_UM.Pages.Contatos.EditModel
@{
    ViewData["Title"] = "Editar Contato";
}

<h1>Editar Contato</h1>

<h4>Contato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Contato.nome_contato" class="control-label"></label>
                <input asp-for="Contato.nome_contato" class="form-control" />
                <span asp-validation-for="Contato.nome_contato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contato.telefone_contato" class="control-label"></label>
                <input asp-for="Contato.telefone_contato" class="form-control" />
                <span asp-validation-for="Contato.telefone_contato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contato.email_contato" class="control-label"></label>
                <input asp-for="Contato.email_contato" class="form-control" />
                <span asp-validation-for="Contato.email_contato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar</a>
</div>
